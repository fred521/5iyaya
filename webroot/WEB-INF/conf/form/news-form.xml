<?xml version="1.0" encoding="gb2312"?>
<formmset>
	<form name="addNews">
		<field name="newsTitle">
			<required-validator>
				<message>分类信息标题不能为空</message>
			</required-validator>
			<length-validator min="0" max="40">
				<message>分类信息标题长度不能超过40个字符</message>
			</length-validator>
		</field>
		<field name="phone">
			<required-validator>
				<message>手机号码不能为空</message>
			</required-validator>
			<regexp-validator pattern="^1(3|5)[0-9]{9}$">
                <message>请正确填写手机号码格式，必须以"13"或"15"开头，共11位数字</message>
            </regexp-validator>
		</field>
		<field name="newsType">
			<required-validator>
				<message>信息分类不能为空</message>
			</required-validator>
		</field>
		<field name="abandonDays" />
		<field name="content">
			<required-validator>
				<message>信息描述不能为空</message>
			</required-validator>
			<length-validator min="0" max="40000">
				<message>信息描述输入长度不能超过40000个字符</message>
			</length-validator>		
		</field>							
	</form>
	<form name="adminAddNews">
	    <field name="nick">
			<required-validator>
				<message>请选择用户名</message>
			</required-validator>
		</field>
		<field name="newsTitle">
			<required-validator>
				<message>信息标题不能为空</message>
			</required-validator>
			<length-validator min="0" max="40">
				<message>分类信息标题长度不能超过40个字符</message>
			</length-validator>
		</field>
		<field name="phone">
			<required-validator>
				<message>手机号码不能为空</message>
			</required-validator>
			<regexp-validator pattern="^1(3|5)[0-9]{9}$">
                <message>请正确填写手机号码格式，必须以"13"或"15"开头，共11位数字</message>
            </regexp-validator>
		</field>
		<field name="newsType">
			<required-validator>
				<message>信息分类不能为空</message>
			</required-validator>
		</field>
		<field name="abandonDays" />
		<field name="content">
			<required-validator>
				<message>信息描述不能为空</message>
			</required-validator>
			<length-validator min="0" max="40000">
				<message>信息描述输入长度不能超过40000个字符</message>
			</length-validator>			
		</field>							
	</form>
</formmset>
